<!-- pages/user/index.wxml -->
<view class="head" bind:tap="login">
  <view class="head-img" wx:if="{{rawData}}">
    <image src="{{rawData.avatarUrl ||'/images/default.svg'}}" mode="aspectFit" />
    <view>{{rawData.nickName}}</view>
  </view>
  <view class="head-img" wx:else>
    <image src="/images/default.svg" mode="aspectFit" />
    <view>登录/注册</view>
  </view>
</view>
<view class="box">
  <view class="history">
    <view class="history-item">
      <view>0</view>
      <view>收藏的店铺</view>
    </view>
    <view class="history-item">
      <view>{{collect}}</view>
      <view>收藏的商品</view>
    </view>
    <view class="history-item">
      <view>0</view>
      <view>关注的商品</view>
    </view>
    <view class="history-item">
      <view>0</view>
      <view>我的足迹</view>
    </view>
  </view>
  <view class="order">
    <view class="order-title">我的订单</view>
    <view class="order-list">
      <view class="order-item">
        <icon class="iconfont icon-daifukuan" />
        <view>待付款</view>
      </view>
      <view class="order-item">
        <icon class="iconfont icon-daishouhuo" />
        <view>待收货</view>
      </view>
      <view class="order-item">
        <icon class="iconfont icon-tuikuan" />
        <view>退款/退货</view>
      </view>
      <view class="order-item">
        <icon class="iconfont icon-dingdan" />
        <view>全部订单</view>
      </view>
    </view>
  </view>
  <view class="address">
    <text>收货地址管理</text>
    <icon class="iconfont icon-jiantouyou" />
  </view>
  <view class="box2">
    <view class="address">
      <text>联系客服</text>
      <text>12580-10086-110</text>
    </view>
    <view class="address">
      <text>意见反馈</text>
      <icon class="iconfont icon-jiantouyou" />
    </view>
    <view class="address">
      <text>关于我们</text>
      <icon class="iconfont icon-jiantouyou" />
    </view>
  </view>
  <view class="address">
    <text>把应用推荐给其他人</text>
    <icon class="iconfont icon-jiantouyou" />
  </view>
</view>